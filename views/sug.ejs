<!DOCTYPE html>
<html ng-app="app">

<head>
  <title>
    <%=title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <style>
    input {
      border: none;
      padding-left: 12px;
    }
  </style>
</head>

<body>

  <div ng-controller="SugCtrl">
    <div class="continer">
      <table class="table table-striped">
        <thead>
          <tr>
            <th width="10%">序</th>
            <th width="35%">供应商</th>
            <th width="35%">供应商地址</th>
            <th>入库数量</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="sup in suppliers">
            <td class="text-center">{{ $index+1 }}</td>
            <td>
              <p toggle-siblings>{{ sup.supplier.name }}</p>
              <sug class="hidden" source="{{ suglists }}" select-item="sup" sug-select='sup.supplier' on-blur="sugInuputBlur(search)" on-close="close(select)" on-select="selected(select)" on-input="input(search)"></sug>
            </td>
            <td>
<!--              <p toggle-siblings>{{ sup.addr.name }}</p>-->
              <div class="input">
                <select ng-options="addr.name for addr in sup.addrs" ng-model="sup.addr"></select>
              </div>
            </td>
            <td>
              <p toggle-siblings>{{sup.num}}</p>
              <div class="input hidden">
                <input type="number" ng-model="sup.num" ng-blur="blur()">
              </div>

            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <script src="/javascripts/vendor/jquery.min.js"></script>
  <script src="/javascripts/vendor/angular.min.js"></script>
  <script src="/javascripts/vendor/angular-route.min.js"></script>
  <script src="/javascripts/app.js"></script>
</body>

</html>