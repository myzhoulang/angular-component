<!DOCTYPE html>
<html ng-app="app">

<head>
    <title>
        <%=title %>
    </title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

    <div ng-controller="testCtrl">
        <div>
            <!--            {{ suglists }}-->
            <!-- <sug source="suglists" on-blur="InuputBlur(search)" on-select="selected(select)"></sug> -->
        </div>

        <div class="continer">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th width="10%">序</th>
                        <th width="35%">供应商</th>
                        <th width="35%">供应商地址</th>
                        <th>入库数量</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="sup in suppliers">
                        <td class="text-center">{{ $index+1 }}</td>
                        <td>
                            <p>{{ sup.supplier.name }}</p>
                            <sug source="{{ suglists }}" select-item="sup" sug-select='sup.supplier' on-blur="InuputBlur(search)" on-select="selected(select)" on-input="input(search)"></sug>

                        </td>
                        <td>
                            <!--                            <p>{{ sup.addr.name }}</p>-->
                            <div class="input">
                                <select ng-options="addr.name for addr in sup.addrs" ng-model="sup.addr"></select>

                            </div>
                        </td>
                        <td>
                            <!--                            <p>{{sup.num}}</p>-->
                            <div class="input">
                                <input type="number" ng-model="sup.num">
                            </div>

                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script src="/javascripts/vendor/jquery.min.js"></script>
    <script src="/javascripts/vendor/angular.min.js"></script>
    <script src="/javascripts/vendor/angular-route.min.js"></script>
    <script src="/javascripts/app.js"></script>
</body>

</html>